# Production Environment Configuration
# Copy this to .env and update with your production values

# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Atlas Connection
# Get this from MongoDB Atlas dashboard
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/musiccc?retryWrites=true&w=majority

# JWT Configuration
# Generate a strong secret key (32+ characters)
JWT_SECRET=your_very_strong_jwt_secret_here_minimum_32_characters
JWT_EXPIRE=7d

# Storage Configuration
STORAGE_MODE=local

# Spotify API (Optional)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# CORS Origins (Update with your frontend URL)
FRONTEND_URL=https://your-frontend-domain.vercel.app